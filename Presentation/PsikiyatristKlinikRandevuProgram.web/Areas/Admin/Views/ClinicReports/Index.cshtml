@model IEnumerable<PsikiyatristKlinikRandevuProgrami.Core.Model.KlinikRapor>

@{
    ViewData["Title"] = "Klinik Raporlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Özel stiller */
    .report-table {
        background-color: #ffffff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

        .report-table th {
            background-color: #1e3a8a; /* Profesyonel koyu mavi */
            color: #ffffff;
            font-weight: 600;
            padding: 12px;
        }

        .report-table tbody tr {
            transition: background-color 0.2s ease;
        }

            .report-table tbody tr:hover {
                background-color: #f8fafc;
            }

    .filter-container {
        background-color: #f1f5f9;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .btn-action {
        padding: 6px 12px;
        font-size: 0.8rem;
        border-radius: 6px;
    }

    .btn-back {
        background-color: #6b7280;
        color: white;
        border-radius: 6px;
        padding: 10px 20px;
        font-size: 0.9rem;
        transition: background-color 0.2s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    }

        .btn-back:hover {
            background-color: #4b5563;
        }

    .empty-state {
        padding: 40px;
        background-color: #f8fafc;
        border-radius: 8px;
        text-align: center;
    }

    .button-container {
        margin-top: 20px;
        text-align: right;
    }
</style>

<div class="container py-5">
    <h2 class="mb-4 text-center fw-bold text-dark">Hasta Klinik Raporları</h2>

    <!-- Arama Alanı -->
    <div class="filter-container">
        <input type="text" id="searchInput" class="form-control" placeholder="Rapor ara (Tarih, Rapor İçeriği)" />
    </div>

    <!-- Klinik Rapor Tablosu -->
    <div class="table-responsive report-table">
        <table class="table table-striped text-center align-middle mb-0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>Rapor İçeriği</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody id="reportTable">
                @if (Model != null && Model.Any())
                {
                    int index = 1;
                    foreach (var rapor in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@rapor.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                            <td class="text-start">@(rapor.RaporIcerigi?.Length > 40 ? rapor.RaporIcerigi.Substring(0, 40) + "..." : rapor.RaporIcerigi)</td>
                            <td>
                                <a href="@Url.Action("Edit", "KlinikRapor", new { id = rapor.Id })" class="btn btn-sm btn-outline-primary btn-action">
                                    <i class="bi bi-pencil"></i> Düzenle
                                </a>
                                <a href="@Url.Action("Delete", "KlinikRapor", new { id = rapor.Id })" class="btn btn-sm btn-outline-danger btn-action" onclick="return confirm('Bu raporu silmek istediğinize emin misiniz?');">
                                    <i class="bi bi-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="empty-state">
                            <i class="bi bi-file-earmark-medical text-muted" style="font-size: 2rem;"></i>
                            <p class="text-muted mt-2">Herhangi bir klinik rapor bulunamadı.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Geri Dön Butonu -->
    <div class="button-container">
        <a href="javascript:history.back()" class="btn btn-back">
            <i class="bi bi-arrow-left me-2"></i> Geri Dön
        </a>
    </div>
</div>

@section Scripts {
    <script>
        // Arama filtresi
        document.getElementById("searchInput").addEventListener("input", function () {
            let filter = this.value.toLowerCase();
            let rows = document.querySelectorAll("#reportTable tr");

            rows.forEach(row => {
                let cells = row.getElementsByTagName("td");
                let match = false;

                for (let i = 1; i < cells.length - 1; i++) {
                    if (cells[i].textContent.toLowerCase().includes(filter)) {
                        match = true;
                        break;
                    }
                }

                row.style.display = match ? "" : "none";
            });
        });
    </script>
}