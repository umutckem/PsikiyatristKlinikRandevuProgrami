@{
    ViewData["Title"] = "Admin Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h2 class="mb-4 text-center fw-bold">Yönetici Paneli</h2>

    <!-- İstatistik Kartları -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card text-white bg-primary shadow h-100 text-center p-3 hover-shadow">
                <div class="card-body">
                    <i class="fa-solid fa-users fa-2x mb-2"></i>
                    <h5 class="card-title">Toplam Kullanıcı</h5>
                    <h3 class="fw-bold">@ViewBag.ToplamKullanici</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success shadow h-100 text-center p-3 hover-shadow">
                <div class="card-body">
                    <i class="fa-solid fa-user-doctor fa-2x mb-2"></i>
                    <h5 class="card-title">Doktor Sayısı</h5>
                    <h3 class="fw-bold">@ViewBag.DoktorSayisi</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info shadow h-100 text-center p-3 hover-shadow">
                <div class="card-body">
                    <i class="fa-solid fa-user-injured fa-2x mb-2"></i>
                    <h5 class="card-title">Hasta Sayısı</h5>
                    <h3 class="fw-bold">@ViewBag.HastaSayisi</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning shadow h-100 text-center p-3 hover-shadow">
                <div class="card-body">
                    <i class="fa-solid fa-calendar-check fa-2x mb-2"></i>
                    <h5 class="card-title">Randevu Sayısı</h5>
                    <h3 class="fw-bold">@ViewBag.RandevuSayisi</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Navigasyon Butonları (Ortalanmış ve eşit genişlikte) -->
    <div class="row justify-content-center text-center mt-4">
        <div class="col-md-6 col-lg-4 mb-3">
            <a href="/Admin/User" class="btn btn-outline-dark btn-lg w-100 py-3">
                <i class="fa-solid fa-users me-2"></i> Kullanıcılar
            </a>
        </div>
        <div class="col-md-6 col-lg-4 mb-3">
            <a href="/Admin/OtherActions" class="btn btn-outline-info btn-lg w-100 py-3">
                <i class="fa-solid fa-gears me-2"></i> Diğer İşlemler
            </a>
        </div>
    </div>
</div>
