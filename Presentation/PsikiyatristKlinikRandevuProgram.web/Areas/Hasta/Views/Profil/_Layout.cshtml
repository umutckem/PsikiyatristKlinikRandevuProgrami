<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Psikiyatrist Klinik Randevu Programı</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" integrity="sha384-XHkIodiftJ2oeK7wjsH2N0Dh2FND2WnwZKW7Y2JEvS3I+4jngAEuW0opRxW1+43W" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js" integrity="sha512-rstIgDs0xPgmG6mX3O1k0QKr2kO6hP2gEpW8Dx9Q2XvS+2VBNp7YULe2r/HaY7V0gC85jC7B0oB2WIOoF6dG5g==" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/additional-methods.min.js" integrity="sha512-6S5LYNn5V+BRp4gT+YB5l66uWLhFDHK+3wnBguCh7p7/PrN+3f5v7n66BvCR66l9fU38yO3P3bR7e8gU3qG+3g==" crossorigin="anonymous"></script>
    <style>
        .navbar-brand { font-weight: bold; }
        .nav-link:hover { color: #0d6efd !important; }
        .btn-primary:hover { background-color: #0b5ed7; }
        .btn-outline-secondary:hover { background-color: #f8f9fa; }
        footer { background-color: #f8f9fa; }
        .form-control:focus { border-color: #0d6efd; box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25); }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "Hasta" })">Psikiyatrist Klinik</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home", new { area = "Hasta" })">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("Index", "Profil", new { area = "Hasta" })">Profil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Randevular", new { area = "Hasta" })">Randevular</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Receteler", new { area = "Hasta" })">Reçeteler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "KlinikRaporlar", new { area = "Hasta" })">Klinik Raporlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Odeme", new { area = "Hasta" })">Ödemeler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout", "Account", new { area = "" })">Çıkış Yap</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-light text-center py-3 mt-5">
        <p>© @DateTime.Now.Year - Psikiyatrist Klinik Randevu Programı</p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>