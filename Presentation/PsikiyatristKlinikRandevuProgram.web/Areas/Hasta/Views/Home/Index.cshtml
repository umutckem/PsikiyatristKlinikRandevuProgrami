@{
    ViewData["Title"] = "Hasta Paneli";
}

<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body, html {
        height: 100%;
        font-family: 'Roboto', sans-serif;
        background: linear-gradient(145deg, #d1d5db, #f3f4f6);
        color: #1f2937;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .dashboard {
        display: flex;
        max-width: 1400px;
        width: 100%;
        min-height: 90vh;
        background: white;
        border-radius: 20px;
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        animation: slideIn 0.6s ease-out;
        margin: 0;
    }

    @@keyframes slideIn {
        from {
            transform: translateY(50px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .sidebar {
        width: 300px;
        background: linear-gradient(to bottom, #1e3a8a, #3b82f6);
        padding: 2.5rem 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
        color: white;
    }

        .sidebar h2 {
            font-size: 2.1rem;
            font-weight: 700;
            margin-bottom: 2.5rem;
            text-align: center;
        }

        .sidebar a.button {
            display: flex;
            align-items: center;
            gap: 0.8rem;
            padding: 0.9rem 1.3rem;
            font-size: 1.05rem;
            font-weight: 500;
            color: white;
            text-decoration: none;
            border-radius: 12px;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.1);
        }

            .sidebar a.button:hover {
                background: rgba(255, 255, 255, 0.2);
                transform: translateX(5px);
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            }

            .sidebar a.button i {
                font-size: 1.3rem;
            }

    .content {
        flex: 1;
        padding: 3.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

        .content h1 {
            font-size: 3rem;
            font-weight: 700;
            color: #1e3a8a;
            margin-bottom: 1.2rem;
            background: linear-gradient(to right, #1e3a8a, #3b82f6);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .content p {
            font-size: 1.25rem;
            color: #4b5563;
            line-height: 1.8;
            max-width: 700px;
            margin-bottom: 2rem;
        }

    @@media (max-width: 768px) {
        .dashboard {
            flex-direction: column;
            min-height: auto;
            border-radius: 12px;
        }

        .sidebar {
            width: 100%;
            padding: 1.5rem;
        }

            .sidebar h2 {
                font-size: 1.7rem;
                margin-bottom: 1.5rem;
            }

        .content {
            padding: 2rem;
        }

            .content h1 {
                font-size: 2.3rem;
            }

            .content p {
                font-size: 1.1rem;
                max-width: 90%;
            }
    }

    @@media (max-width: 480px) {
        .dashboard {
            border-radius: 8px;
        }

        .sidebar a.button {
            font-size: 0.95rem;
            padding: 0.8rem 1rem;
        }

        .content h1 {
            font-size: 2rem;
        }

        .content p {
            font-size: 1rem;
        }
    }
</style>

<div class="dashboard">
    <div class="sidebar">
        <h2>Hasta Paneli</h2>
        <a href="@Url.Action("Index", "Home", new { area = "" })" class="button"><i class="fas fa-home"></i> Ana Sayfa</a>
        <a href="@Url.Action("Index", "KlinikRaporlar", new { area = "Hasta" })" class="button"><i class="fas fa-file-medical"></i> Klinik Raporlarım</a>
        <a href="@Url.Action("Index", "Randevular", new { area = "Hasta" })" class="button"><i class="fas fa-calendar-alt"></i> Randevular</a>
        <a href="@Url.Action("Index", "Receteler", new { area = "Hasta" })" class="button"><i class="fas fa-prescription"></i> Reçeteler</a>
        <a href="@Url.Action("Index", "Odeme", new { area = "Hasta" })" class="button"><i class="fas fa-credit-card"></i> Ödeme İşlemleri</a>
        <a href="@Url.Action("Index", "Bildirimler", new { area = "Hasta" })" class="button"><i class="fas fa-bell"></i> Bildirimler</a>
        <a href="@Url.Action("Index", "Profil", new { area = "Hasta" })" class="button"><i class="fas fa-user"></i> Profil</a>
        <a href="@Url.Action("Index", "GeriBildirim", new { area = "Hasta" })" class="button"><i class="fas fa-comment-dots"></i> Geri Bildirim Gönder</a>
    </div>
    <div class="content">
        <h1>Hoşgeldiniz, @User.Identity.Name!</h1>
        <p>Psikiyatrist Randevu Sistemine giriş yaptınız. Sol taraftaki menüden istediğiniz işlemi seçebilirsiniz.</p>
    </div>
</div>
