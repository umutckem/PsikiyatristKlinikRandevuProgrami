@model List<PsikiyatristKlinikRandevuProgrami.Core.Model.Kullanici>

@{
    ViewData["Title"] = "Hastalarım";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 1rem;
        box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    }

    .card-header {
        background-color: #007bff;
        color: white;
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
        font-weight: 600;
    }

    .table thead {
        background-color: #343a40;
        color: white;
    }

    .table-hover tbody tr:hover {
        background-color: #dbe9ff;
        cursor: pointer;
        transition: background-color 0.25s ease;
    }

    .btn-back {
        border-radius: 50px;
        padding-left: 20px;
        padding-right: 20px;
    }

    .no-data {
        font-size: 1.1rem;
        color: #6c757d;
        padding: 3rem 0;
    }
</style>

<div class="container py-5">
    <div class="card mx-auto" style="max-width: 900px;">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4><i class="bi bi-people-fill me-2"></i>Hastalarım</h4>
            <a href="javascript:history.back()" class="btn btn-light btn-back shadow-sm">
                <i class="bi bi-arrow-left-circle me-1"></i> Geri Dön
            </a>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle text-center">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ad Soyad</th>
                                <th>Doğum Tarihi</th>
                                <th>Cinsiyet</th>
                                <th>Sigorta Durumu</th>
                                <th>Adres</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@Model[i].Ad @Model[i].Soyad</td>
                                    <td>@Model[i].DogumTarihi.ToString("yyyy-MM-dd")</td>
                                    <td>@Model[i].Cinsiyet</td>
                                    <td>@Model[i].SigortaDurumu</td>
                                    <td>@Model[i].Adres</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center no-data">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> Hiç hasta kaydı bulunamadı.
                </div>
            }
        </div>
    </div>
</div>
