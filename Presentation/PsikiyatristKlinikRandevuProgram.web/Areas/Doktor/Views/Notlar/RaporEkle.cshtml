@model PsikiyatristKlinikRandevuProgrami.Core.Model.KlinikRapor

@{
    ViewData["Title"] = "Rapor Ekle";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<div class="container py-5">
    <!-- Başlık ve Geri Dön -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold"><i class="fas fa-file-medical me-2"></i>Rapor Ekle</h2>
        <a asp-area="doktor" asp-controller="Notlar" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Geri Dön
        </a>
    </div>

    <!-- Form Kartı -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <form action="/doktor/Notlar/RaporEkle" method="post">
                @* Gizli Alanlar *@
                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="hidden" name="HastaId" value="@Model.HastaId" />
                <input type="hidden" name="PsikiyatristId" value="@Model.PsikiyatristId" />
                <input type="hidden" name="OlusturmaTarihi" value="@Model.OlusturmaTarihi.ToString("o")" />

                <!-- Rapor İçeriği -->
                <div class="mb-4">
                    <label for="RaporIcerigi" class="form-label fw-semibold">Rapor İçeriği</label>
                    <textarea name="RaporIcerigi" class="form-control shadow-sm" rows="7" placeholder="Rapor detaylarını buraya yazınız..." required>@Model.RaporIcerigi</textarea>
                </div>

                <!-- Kaydet Butonu -->
                <div class="text-end">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-save me-2"></i>Raporu Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    textarea.form-control {
        resize: vertical;
        font-size: 1rem;
        line-height: 1.5;
    }

    h2.text-primary {
        font-size: 1.6rem;
    }

    .card {
        border-radius: 12px;
    }

    .btn-success {
        background-color: #2b6cb0;
        border-color: #2b6cb0;
    }

        .btn-success:hover {
            background-color: #225a99;
            border-color: #225a99;
        }
</style>
