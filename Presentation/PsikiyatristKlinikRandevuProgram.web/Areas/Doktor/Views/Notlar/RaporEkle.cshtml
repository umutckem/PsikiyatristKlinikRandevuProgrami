@model PsikiyatristKlinikRandevuProgrami.Core.Model.KlinikRapor

@{
    ViewData["Title"] = "Rapor Ekle";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-dark fw-bold mb-0">Rapor Ekle</h1>
        <a asp-area="doktor" asp-controller="Notlar" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Geri Dön
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            <form action="/doktor/Notlar/RaporEkle" method="post">
                <!-- GİZLİ ALANLAR -->
                <input type="hidden" name="HastaId" value="@Model.HastaId" />
                <input type="hidden" name="PsikiyatristId" value="@Model.PsikiyatristId"
                <input type="hidden" name="OlusturmaTarihi" value="@Model.OlusturmaTarihi.ToString("o")" />
                <input type="hidden" name="Id" value="@Model.Id" />

                <!-- Rapor İçeriği -->
                <div class="mb-4">
                    <label for="RaporIcerigi" class="form-label">Rapor İçeriği</label>
                    <textarea name="RaporIcerigi" class="form-control" rows="8" required>@Model.RaporIcerigi</textarea>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Kaydet
                </button>
            </form>
        </div>
    </div>
</div>
