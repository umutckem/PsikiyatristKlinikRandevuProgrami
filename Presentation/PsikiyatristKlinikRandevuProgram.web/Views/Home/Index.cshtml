@{
    ViewData["Title"] = "Ana Sayfa";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    .hero {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
        padding: 100px 0;
    }

    .feature-icon {
        font-size: 3rem;
        color: #2575fc;
    }

    .card:hover {
        transform: translateY(-5px);
        transition: 0.3s;
    }
</style>

<div class="hero text-center">
    <div class="container">
        <h1 class="display-4 fw-bold">Psikiyatrist Klinik Randevu Sistemine Hoş Geldiniz</h1>
        <p class="lead mt-3">Uzman doktorlardan destek almak artık çok kolay.</p>
        <a class="btn btn-light btn-lg mt-4" asp-controller="Randevu" asp-action="Index">
            <i class="bi bi-calendar-check"></i> Randevu Al
        </a>
    </div>
</div>

<div class="container mt-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-clock feature-icon"></i>
                    <h5 class="mt-3">Hızlı İşlem</h5>
                    <p>Kolay arayüz ile randevunuzu dakikalar içinde oluşturun.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-shield-lock feature-icon"></i>
                    <h5 class="mt-3">Gizlilik Güvencesi</h5>
                    <p>Tüm verileriniz güvenli sunucularımızda saklanır.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-person-heart feature-icon"></i>
                    <h5 class="mt-3">Uzman Kadro</h5>
                    <p>Alanında deneyimli psikiyatristlerle görüşün.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@if (User.Identity.IsAuthenticated)
{
    <div class="container mt-4">
        <div class="alert alert-success text-center">
            Hoş geldiniz, <strong>@User.Identity.Name</strong>!
        </div>
    </div>
}
